  langid = {english},
  language = {en}
}

@inproceedings{liSamplelevelDataSelection2021,
  title = {Sample-Level {{Data Selection}} for {{Federated Learning}}},
  booktitle = {{{IEEE INFOCOM}} 2021 - {{IEEE Conference}} on {{Computer Communications}}},
