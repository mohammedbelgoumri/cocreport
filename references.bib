@inproceedings{duanFederatedLearningDataAgnostic2023,
  title = {Federated {{Learning}} with {{Data-Agnostic Distribution Fusion}}},
  booktitle = {2023 {{IEEE}}/{{CVF Conference}} on {{Computer Vision}} and {{Pattern Recognition}} ({{CVPR}})},
